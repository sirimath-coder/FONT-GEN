<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIRIMATH FONTS | 3D Neural Stylizer</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Poppins:wght@300;500&display=swap');

        :root {
            --accent: #00ffcc;
            --accent-glow: rgba(0, 255, 204, 0.6);
            --bg-dark: #020205;
            --glass: rgba(255, 255, 255, 0.05);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            background-color: var(--bg-dark);
            color: #fff;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
            min-height: 100vh;
        }

        #canvas-container {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            z-index: -1;
            background: radial-gradient(circle at center, #0a0a20 0%, #020205 100%);
        }

        .wrapper {
            max-width: 900px;
            margin: 0 auto;
            padding: 60px 20px;
            z-index: 1;
            position: relative;
        }

        header {
            text-align: center;
            margin-bottom: 50px;
            animation: slideDown 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(2rem, 8vw, 3.5rem);
            letter-spacing: 10px;
            text-transform: uppercase;
            background: linear-gradient(to bottom, #fff 30%, var(--accent) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 15px var(--accent-glow));
        }

        .input-container {
            background: var(--glass);
            border: 1px solid rgba(0, 255, 204, 0.2);
            padding: 40px;
            border-radius: 24px;
            backdrop-filter: blur(12px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.6);
            margin-bottom: 50px;
            transition: 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .input-container:focus-within {
            border-color: var(--accent);
            box-shadow: 0 0 40px var(--accent-glow);
            transform: translateY(-5px);
        }

        textarea {
            width: 100%;
            background: transparent;
            border: none;
            color: #fff;
            font-size: 1.8rem;
            outline: none;
            resize: none;
            text-align: center;
            font-family: 'Poppins', sans-serif;
        }

        .results-grid {
            display: grid;
            gap: 20px;
            perspective: 1000px;
        }

        .font-card {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 16px;
            padding: 20px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(255, 255, 255, 0.08);
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
        }

        .font-card:hover {
            background: rgba(0, 255, 204, 0.05);
            transform: translateX(10px) scale(1.02);
            border-color: var(--accent);
        }

        .font-info {
            display: flex;
            flex-direction: column;
            gap: 5px;
            overflow: hidden;
        }

        .font-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            color: var(--accent);
            letter-spacing: 2px;
            font-family: 'Orbitron';
        }

        .font-preview {
            font-size: 1.4rem;
            color: #fff;
            word-break: break-all;
        }

        .copy-btn {
            background: transparent;
            color: var(--accent);
            border: 1px solid var(--accent);
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            font-size: 0.7rem;
            transition: 0.3s;
            flex-shrink: 0;
        }

        .copy-btn:hover {
            background: var(--accent);
            color: #000;
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-60px); }
            to { opacity: 1; transform: translateY(0); }
        }

        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-thumb { background: var(--accent); border-radius: 10px; }
    </style>
</head>
<body>

    <div id="canvas-container"></div>

    <div class="wrapper">
        <header>
            <h1>SIRIMATH FONTS</h1>
            <p style="color: var(--accent); opacity: 0.8; letter-spacing: 4px; font-size: 0.8rem; margin-top: 10px;">NEURAL MULTI-STYLE GENERATOR</p>
        </header>

        <div class="input-container">
            <textarea id="mainInput" placeholder="Enter Neural Sequence..." rows="1" oninput="generateFonts()"></textarea>
        </div>

        <div class="results-grid" id="results"></div>
    </div>

    <script>
        // --- 3D BACKGROUND ---
        let scene, camera, renderer, stars;
        function init3D() {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 1, 1000);
            camera.position.z = 1; camera.rotation.x = Math.PI/2;
            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            document.getElementById('canvas-container').appendChild(renderer.domElement);
            let geo = new THREE.BufferGeometry();
            let pos = [];
            for(let i=0; i<6000; i++) pos.push(Math.random()*600-300, Math.random()*600-300, Math.random()*600-300);
            geo.setAttribute('position', new THREE.Float32BufferAttribute(pos, 3));
            let mat = new THREE.PointsMaterial({ color: 0x00ffcc, size: 0.7, transparent: true, blending: THREE.AdditiveBlending });
            stars = new THREE.Points(geo, mat);
            scene.add(stars);
            animate();
        }
        function animate() {
            stars.rotation.y += 0.0008;
            renderer.render(scene, camera);
            requestAnimationFrame(animate);
        }
        init3D();

        // --- EXTENDED FONT DATA ---
        const fontMaps = [
            { id: "Gothic", map: {"a":"ð”ž","b":"ð”Ÿ","c":"ð” ","d":"ð”¡","e":"ð”¢","f":"ð”£","g":"ð”¤","h":"ð”¥","i":"ð”¦","j":"ð”§","k":"ð”¨","l":"ð”©","m":"ð”ª","n":"ð”«","o":"ð”¬","p":"ð”­","q":"ð”®","r":"ð”¯","s":"ð”°","t":"ð”±","u":"ð”²","v":"ð”³","w":"ð”´","x":"ð”µ","y":"ð”¶","z":"ð”·"} },
            { id: "Script", map: {"a":"ð“ª","b":"ð“«","c":"ð“¬","d":"ð“­","e":"ð“®","f":"ð“¯","g":"ð“°","h":"ð“±","i":"ð“²","j":"ð“³","k":"ð“´","l":"ð“µ","m":"ð“¶","n":"ð“·","o":"ð“¸","p":"ð“¹","q":"ð“º","r":"ð“»","s":"ð“¼","t":"ð“½","u":"ð“¾","v":"ð“¿","w":"ð”€","x":"ð”","y":"ð”‚","z":"ð”ƒ"} },
            { id: "Double-Struck", map: {"a":"ð•’","b":"ð•“","c":"ð•”","d":"ð••","e":"ð•–","f":"ð•—","g":"ð•˜","h":"ð•™","i":"ð•š","j":"ð•›","k":"ð•œ","l":"ð•","m":"ð•ž","n":"ð•Ÿ","o":"ð• ","p":"ð•¡","q":"ð•¢","r":"ð•£","s":"ð•¤","t":"ð•¥","u":"ð•¦","v":"ð•§","w":"ð•¨","x":"ð•©","y":"ð•ª","z":"ð•«"} },
            { id: "Small Caps", map: {"a":"á´€","b":"Ê™","c":"á´„","d":"á´…","e":"á´‡","f":"êœ°","g":"É¢","h":"Êœ","i":"Éª","j":"á´Š","k":"á´‹","l":"ÊŸ","m":"á´","n":"É´","o":"á´","p":"á´˜","q":"Ç«","r":"Ê€","s":"s","t":"á´›","u":"á´œ","v":"á´ ","w":"á´¡","x":"x","y":"Ê","z":"á´¢"} },
            { id: "Circles", map: {"a":"â“","b":"â“‘","c":"â“’","d":"â““","e":"â“”","f":"â“•","g":"â“–","h":"â“—","i":"â“˜","j":"â“™","k":"â“š","l":"â“›","m":"â“œ","n":"â“","o":"â“ž","p":"â“Ÿ","q":"â“ ","r":"â“¡","s":"â“¢","t":"â“£","u":"â“¤","v":"â“¥","w":"â“¦","x":"â“§","y":"â“¨","z":"â“©"} },
            { id: "Cyber Hacker", transform: t => t.toUpperCase().replace(/E/g,'3').replace(/A/g,'4').replace(/O/g,'0').replace(/I/g,'1').replace(/S/g,'5').replace(/T/g,'7') },
            { id: "Upside Down", map: {"a":"É","b":"q","c":"É”","d":"p","e":"Ç","f":"ÉŸ","g":"Æƒ","h":"É¥","i":"á´‰","j":"É¾","k":"Êž","l":"l","m":"É¯","n":"u","o":"o","p":"d","q":"b","r":"É¹","s":"s","t":"Ê‡","u":"n","v":"ÊŒ","w":"Ê","x":"x","y":"ÊŽ","z":"z"}, reverse: true },
            { id: "Strikethrough", transform: t => t.split('').join('Ì¶') + 'Ì¶' },
            { id: "Cursed/Zalgo", transform: t => t.split('').map(char => char + '\u033f\u0311\u0306\u032c').join('') }
        ];

        function generateFonts() {
            const input = document.getElementById('mainInput').value;
            const container = document.getElementById('results');
            container.innerHTML = '';
            
            if(!input) return;

            fontMaps.forEach(style => {
                let styledText = "";
                if(style.transform) {
                    styledText = style.transform(input);
                } else {
                    let tempInput = style.reverse ? input.split('').reverse().join('') : input;
                    styledText = tempInput.split('').map(char => {
                        let low = char.toLowerCase();
                        return style.map[low] || char;
                    }).join('');
                }

                const card = document.createElement('div');
                card.className = 'font-card';
                card.innerHTML = `
                    <div class="font-info">
                        <span class="font-label">${style.id}</span>
                        <div class="font-preview">${styledText}</div>
                    </div>
                    <button class="copy-btn" onclick="copyText(this, '${styledText.replace(/'/g, "\\'")}')">COPY</button>
                `;
                container.appendChild(card);
            });
        }

        async function copyText(btn, text) {
            await navigator.clipboard.writeText(text);
            btn.innerText = "COPIED";
            setTimeout(() => btn.innerText = "COPY", 1000);
        }
    </script>
</body>
</html>
